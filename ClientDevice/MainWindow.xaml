<Window x:Class="ClientDevice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDevice"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:ctrls="clr-namespace:ClientDevice.Views"
        mc:Ignorable="d"
        Title="Astro Compute" Height="768" Width="1360">

    <Grid Background="#262626">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.33*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--    Left hand side content in first column  -->
        <Grid Grid.Column="0" Background="#363636">
            <StackPanel Orientation="Vertical">
                <!--    Adds the Font Controller    -->
                <ctrls:TextController />

                <!--    Adds the Colour Controller-->
                <ctrls:ColourController />

                <!--    Adds the Language Controller    -->
                <ctrls:LanguageController />

                <!--    Adds the Theme Controller   -->
                <ctrls:ThemeController />
            </StackPanel>
        </Grid>

        <!--    Main Content Area   -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--    Application Title   -->
            <TextBlock Text="Astro Compute" Grid.Row="0" Margin="5"
                       FontSize="24" FontWeight="Bold" Foreground="#D9D9D9" />

            <!--    Version Details     -->
            <TextBlock Text="Version: 1.0.1" Grid.Row="2" Margin="5"
                       FontSize="8" HorizontalAlignment="Right" Foreground="#D9D9D9" />

            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--    Calculation Control Elements Section    -->
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <!--    Adds the Star Velocity control  -->
                    <ctrls:StarVelocityControl />

                    <!--    Adds the Star Distance Control  -->
                    <ctrls:StarDistanceControl />

                    <!--    Adds the Temperature Conversion Control     -->
                    <ctrls:TemperatureConversionControl />

                    <!--    Adds the Event Horizon Control  -->
                    <ctrls:EventHorizonControl />
                </StackPanel>

                <!--    Adds the Data Display Control   -->
                <ctrls:DataDisplayControl Grid.Column="1" />
            </Grid>
        </Grid>
    </Grid>
</Window>