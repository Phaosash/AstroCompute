<Window x:Class="ClientDevice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDevice"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Astro Compute" Height="768" Width="1360">

    <Grid Background="#262626">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.33*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--    Left hand side content in first column  -->
        <Grid Grid.Column="0" Background="#363636">
            <StackPanel Orientation="Vertical">
                <!--    Font customisation section      -->
                <StackPanel Margin="5" Orientation="Vertical">
                    <Label Content="Text Options" Background="#282828"
                           FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

                    <Label Content="Select Font" Margin="5,10,5,0" Foreground="#D9D9D9" />

                    <!--    Creats a dropdown list of selectable fonts      -->
                    <ComboBox Background="#303030" Margin="5,0,5,0">
                        <ComboBoxItem Content="Calibri" FontFamily="Calibri" FontSize="16" />
                        <ComboBoxItem Content="Cambria" FontFamily="Cambria" FontSize="16" />
                        <ComboBoxItem Content="Comic Sans" FontFamily="Comic Sans MS" FontSize="16" />
                        <ComboBoxItem Content="Consolas" FontFamily="Consolas" FontSize="16" />
                        <ComboBoxItem Content="Segou UI" FontFamily="Segoe UI" FontSize="16" />
                        <ComboBoxItem Content="Verdana" FontFamily="Verdana" FontSize="16" />
                    </ComboBox>

                    <!--    Change the application titles size      -->
                    <Label Content="Change Font Size / Colour" Margin="5,10,5,0" Foreground="#D9D9D9" />

                    <!--    Font Labels, Sizes and Colours      -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--    Labels      -->
                        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="5,10,0,0">
                            <Label Content="Title Size" Foreground="#D9D9D9" />
                            <Label Content="Font Size" Foreground="#D9D9D9" />
                            <Label Content="Label Size" Foreground="#D9D9D9" />
                        </StackPanel>
                        
                        <!--    Font Size's       -->
                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5,10,5,0">
                            <xctk:IntegerUpDown Width="50" Value="24" Margin="0,2,0,0"
                                                Minimum="18" Maximum="36" />

                            <xctk:IntegerUpDown Width="50" Value="12" Margin="0,6,0,0"
                                                Minimum="8" Maximum="24" />

                            <xctk:IntegerUpDown Width="50" Value="14" Margin="0,6,0,0"
                                                Minimum="8" Maximum="24" />
                        </StackPanel>
                        
                        <!--    Colour Selection    -->
                        <StackPanel Orientation="Vertical" Grid.Column="2" Margin="0,10,5,0">
                            <xctk:ColorPicker Margin="10,2,0,0" Width="50" />
                            <xctk:ColorPicker Margin="10,4,0,0" Width="50" />
                            <xctk:ColorPicker Margin="10,4,0,0" Width="50" />
                        </StackPanel>
                    </Grid>

                    <!--    Button for applying th changes to the fonts     -->
                    <Button Margin="0,10,5,0" MaxWidth="250" HorizontalAlignment="Right">
                        <Label Content="Apply Changes" />
                    </Button>
                </StackPanel>   <!--    End Font section        -->

                <!--    Colour Options Section      -->
                <StackPanel Margin="5" Orientation="Vertical">
                    <Label Content="Colour Options" Background="#282828"
                           FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--    Labels      -->
                        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="5,10,5,0">
                            <Label Content="Background Colour" Foreground="#D9D9D9" />
                            <Label Content="Panel Colour" Margin="0,10,0,0" Foreground="#D9D9D9" />
                            <Label Content="Label Colour" Margin="0,10,0,0" Foreground="#D9D9D9" />
                            <Label Content="Button Colour" Margin="0,10,0,0" Foreground="#D9D9D9" />
                            <Label Content="Data Background Colour" Margin="0,10,0,0" Foreground="#D9D9D9" />
                        </StackPanel>

                        <!--    Selectors   -->
                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,10,5,0">
                            <xctk:ColorPicker Width="50" Margin="0,2,0,0" />
                            <xctk:ColorPicker Width="50" Margin="0,14,0,0" />
                            <xctk:ColorPicker Width="50" Margin="0,14,0,0" />
                            <xctk:ColorPicker Width="50" Margin="0,14,0,0" />
                            <xctk:ColorPicker Width="50" Margin="0,14,0,0" />
                        </StackPanel>
                    </Grid>

                    <!--    Button for applying th changes to the fonts     -->
                    <Button Margin="0,10,0,0" MaxWidth="250" HorizontalAlignment="Right">
                        <Label Content="Apply Changes" />
                    </Button>
                </StackPanel>   <!--    End Colour Section      -->
                
                <!--    Language Section        -->
                <StackPanel Orientation="Vertical" Margin="5">
                    <Label Content="Language Selection" Background="#282828"
                           FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="5,10,5,0">
                            <Button>
                                <Label Content="English" />
                            </Button>

                            <Button Margin="0,5,0,0">
                                <Label Content="French" />
                            </Button>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5,10,5,0">
                            <Button>
                                <Label Content="German" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>   <!--    End Language Section        -->
                
                <!--    Theme Section   -->
                <StackPanel Orientation="Vertical" Margin="5">
                    <Label Content="Change Theme" Background="#282828"
                           FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

                    <Button Margin="5,10,5,0" Width="100">
                        <Label Content="Day / Night" />
                    </Button>
                </StackPanel>   <!--    End Theme Section       -->
            </StackPanel>
        </Grid> <!-- End left side content  -->
        
        <!--    Main Content Area   -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!--    Application Title   -->
            <TextBlock Text="Astro Compute" Grid.Row="0" Margin="5"
                       FontSize="24" FontWeight="Bold" Foreground="#D9D9D9" />
            
            <!--    Version Details     -->
            <TextBlock Text="Version: 1.0.1" Grid.Row="2" Margin="5"
                       FontSize="8" HorizontalAlignment="Right" Foreground="#D9D9D9" />

            <!--    Main Work Area  -->
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--    Left Side Content   -->
                <Grid Grid.Column="0" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--    Star Velocity Section       -->
                    <Border BorderThickness="0,0,0,2" BorderBrush="Gray" Margin="5" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="Star Velocity" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#D9D9D9" Grid.Row="0" Grid.Column="0" />

                            <Label Content="Observed Wave Length" FontSize="12" Foreground="#D9D9D9"
                                   Grid.Column="0" Grid.Row="1" />

                            <Label Content="Rest Wave length" FontSize="12" Foreground="#D9D9D9"
                                   Grid.Column="1" Grid.Row="1" />

                            <Button Grid.Column="2" Grid.Row="2" Margin="5,5,5,10">
                                <Label Content="Calculate" />
                            </Button>

                            <TextBox Grid.Row="2" Grid.Column="0" Margin="5,5,5,10" />

                            <TextBox Grid.Row="2" Grid.Column="1" Margin="5,5,5,10" />
                        </Grid>
                    </Border>   <!--    End Star Velocity Section   -->

                    <!--    Star Distance Section-->
                    <Border Grid.Row="1" BorderThickness="0,0,0,2" BorderBrush="Gray" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="Star Distance" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#D9D9D9" Grid.Row="0" Grid.Column="0" />

                            <Label Content="Parallax Arc Seconds" FontSize="12" Foreground="#D9D9D9"
                                   Grid.Column="0" Grid.Row="1" />

                            <Button Grid.Column="2" Grid.Row="2" Margin="5,5,5,10">
                                <Label Content="Calculate" />
                            </Button>

                            <TextBox Grid.Row="2" Grid.Column="0" Margin="5,5,5,10" />
                        </Grid>
                    </Border>   <!--    End Star Distance Section   -->

                    <!--    Temperature Section-->
                    <Border Grid.Row="2" BorderThickness="0,0,0,2" BorderBrush="Gray" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="Temperature Conversion" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#D9D9D9" Grid.Row="0" Grid.Column="0" />

                            <Label Content="Celsius Temperature" FontSize="12" Foreground="#D9D9D9"
                                   Grid.Column="0" Grid.Row="1" />

                            <Button Grid.Column="1" Grid.Row="2" Margin="5,5,5,10">
                                <Label Content="Calculate" />
                            </Button>

                            <TextBox Grid.Row="2" Grid.Column="0" Margin="5,5,5,10" />
                        </Grid>
                    </Border>   <!--    End Temperature Section   -->

                    <!--    Event Horizon Section-->
                    <Border Grid.Row="3" BorderThickness="0,0,0,2" BorderBrush="Gray" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="Event Horizon" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#D9D9D9" Grid.Row="0" Grid.Column="0" />

                            <Label Content="Mass in Kg" FontSize="12" Foreground="#D9D9D9"
                                   Grid.Column="0" Grid.Row="1" />

                            <Label Content="Exponent" FontSize="12" Foreground="#D9D9D9"
                                   Grid.Column="1" Grid.Row="1" />

                            <Button Grid.Column="2" Grid.Row="2" Margin="5,5,5,10">
                                <Label Content="Calculate" />
                            </Button>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="5,5,5,10">
                                <TextBox Width="100" />

                                <TextBlock Text="x10" Margin="10,0,0,0" VerticalAlignment="Bottom" />
                            </StackPanel>

                            <xctk:IntegerUpDown Grid.Column="1" Grid.Row="2" Margin="5,5,5,10" />
                        </Grid>
                    </Border>   <!--    End Event horizon Section   -->
                </Grid> <!--    End Left Side Content   -->
                
                <!--    Right Side Content  -->
                <DataGrid Grid.Column="1" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Star Velocity" />
                        <DataGridTextColumn Header="Star Distance" />
                        <DataGridTextColumn Header="Temperatre Conversion" />
                        <DataGridTextColumn Header="Event Horizon" />
                    </DataGrid.Columns>
                </DataGrid> <!--    End Right Side Content  -->
            </Grid><!-- End Main Work Area  -->
        </Grid> <!--    End Main Content Area   -->
    </Grid>
</Window>