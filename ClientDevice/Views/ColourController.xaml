<UserControl x:Class="ClientDevice.Views.ColourController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientDevice.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="440">

    <StackPanel Margin="5" Orientation="Vertical">
        <Label Content="Colour Options" Background="#282828"
           FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!--    Background Colour Section   -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="0" Grid.Row="0">
                <TextBlock Text="Background" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>

            <!--    Panel Colour Section   -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="1" Grid.Row="0">
                <TextBlock Text="Panels" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>

            <!--    Label Colour Section   -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="2" Grid.Row="0">
                <TextBlock Text="Labels" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>

            <!--    Button Colour Section   -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="0" Grid.Row="1">
                <TextBlock Text="Buttons" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>

            <!--    Data Grid Colour Section   -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="1" Grid.Row="1">
                <TextBlock Text="Data Grid" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>