<UserControl x:Class="ClientDevice.Views.ColourOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientDevice.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="440">

    <StackPanel Margin="5" Orientation="Vertical">
        <Label Content="Colour Options" Background="DarkSlateGray"
               FontSize="18" FontWeight="SemiBold" Foreground="AntiqueWhite" />

        <StackPanel Orientation="Vertical" Margin="5,10,5,5">
            <StackPanel Orientation="Horizontal">
                <Label Content="Background Colour" />

                <xctk:ColorPicker Margin="12,0,0,0" Width="50" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Panel Colour" />

                <xctk:ColorPicker Margin="47,0,0,0" Width="50" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Label Colour" />

                <xctk:ColorPicker Margin="48,0,0,0" Width="50" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Button Colour" />

                <xctk:ColorPicker Margin="41,0,0,0" Width="50" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Background Colour" />

                <xctk:ColorPicker Margin="14,0,0,0" Width="50" />
            </StackPanel>
        </StackPanel>

        <!--    Button for applying th changes to the fonts     -->
        <Button Margin="0,10,0,0" MaxWidth="250" HorizontalAlignment="Right">
            <Label Content="Apply Changes" />
        </Button>
    </StackPanel>
</UserControl>