<UserControl x:Class="ClientDevice.Views.DataDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientDevice.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="440">
    <StackPanel Margin="5">
        <!--    Title   -->
        <TextBlock Text="Data Output Display" FontSize="18" FontWeight="SemiBold" 
           Foreground="#D9D9D9" Margin="2.5" Grid.Column="0" Grid.Row="0" />
        
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Star Velocity" />
                <DataGridTextColumn Header="Star Distance" />
                <DataGridTextColumn Header="Temperatre Conversion" />
                <DataGridTextColumn Header="Event Horizon" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
