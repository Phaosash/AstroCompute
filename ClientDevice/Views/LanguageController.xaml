<UserControl x:Class="ClientDevice.Views.LanguageController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientDevice.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="440">
    
    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock Text="Language Selection" Background="#282828" Padding="5"
                   FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="English (UK)" Grid.Column="0" Padding="5"
                    Margin="5" />
            <Button Content="French" Grid.Column="1" Padding="5"
                    Margin="5" />
            <Button Content="German" Grid.Column="2" Padding="5"
                    Margin="5" />
        </Grid>
    </StackPanel>
</UserControl>