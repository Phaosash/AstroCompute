<UserControl x:Class="ClientDevice.Views.StarVelocityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientDevice.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="440">
    
    <Border BorderThickness="0,0,0,2" BorderBrush="Gray" Margin="5" Grid.Row="0">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--    Title   -->
            <TextBlock Text="Star Velocity" FontSize="18" FontWeight="SemiBold" 
                       Foreground="#D9D9D9" Margin="2.5" Grid.Column="0" Grid.Row="0" />

            <!--    Observed Wave Length Section  -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="0" Grid.Row="1">
                <TextBlock Text="Observed Wave Length" FontSize="12" Foreground="#D9D9D9"
                           Margin="2.5" />

                <TextBox Margin="2.5" />

                <TextBlock Text="Rest Wave Length" FontSize="12" Foreground="#D9D9D9"
                           Margin="2.5" />

                <TextBox Margin="2.5" />
            </StackPanel>

            <Button Content="Calculate" Grid.Column="1" Grid.Row="2" Padding="2.5" Margin="2.5"
                    VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</UserControl>