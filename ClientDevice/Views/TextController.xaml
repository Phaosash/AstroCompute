<UserControl x:Class="ClientDevice.Views.TextController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientDevice.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">

    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock Text="Text Options" Background="#282828" Padding="5"
                   FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--    Titles Section      -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="0">
                <TextBlock Text="Titles" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <TextBlock Text="Select Font" Foreground="#D9D9D9" Margin="2.5" />

                <ComboBox Background="#303030" Margin="2.5"
                          ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                          SelectedItem="{Binding SelectedFont}" />

                <TextBlock Text="Font Size" Foreground="#D9D9D9" Margin="2.5" />

                <xctk:IntegerUpDown Value="24" Minimum="18" Maximum="36" 
                                    Margin="2.5" />

                <TextBlock Text="Font Colour" Foreground="#D9D9D9" Margin="2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>

            <!--    Labels Section      -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="1">
                <TextBlock Text="Labels" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <TextBlock Text="Select Font" Foreground="#D9D9D9" Margin="2.5" />

                <ComboBox Background="#303030" Margin="2.5"
                          ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                          SelectedItem="{Binding SelectedFont}" />

                <TextBlock Text="Font Size" Foreground="#D9D9D9" Margin="2.5" />

                <xctk:IntegerUpDown Value="24" Minimum="18" Maximum="36" 
                                    Margin="2.5" />

                <TextBlock Text="Font Colour" Foreground="#D9D9D9" Margin="2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>
            
            <!--    Remaining Fonts Section     -->
            <StackPanel Orientation="Vertical" Margin="2.5" Grid.Column="2">
                <TextBlock Text="Body" Foreground="#D9D9D9"
                           FontWeight="SemiBold" FontSize="14" Margin=" 2.5" />

                <TextBlock Text="Select Font" Foreground="#D9D9D9" Margin="2.5" />

                <ComboBox Background="#303030" Margin="2.5"
                          ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                          SelectedItem="{Binding SelectedFont}" />

                <TextBlock Text="Font Size" Foreground="#D9D9D9" Margin="2.5" />

                <xctk:IntegerUpDown Value="24" Minimum="18" Maximum="36" 
                                    Margin="2.5" />

                <TextBlock Text="Font Colour" Foreground="#D9D9D9" Margin="2.5" />

                <xctk:ColorPicker Margin="2.5" />

                <Button Content="Apply Changes" Margin="2.5" Padding="5" />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>