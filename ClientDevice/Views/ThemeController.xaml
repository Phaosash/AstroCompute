<UserControl x:Class="ClientDevice.Views.ThemeController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientDevice.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="440">
    
    <StackPanel Orientation="Vertical" Margin="5">
        <Label Content="Change Theme" Background="#282828"
           FontSize="18" FontWeight="SemiBold" Foreground="#D9D9D9" />

        <!--    Toggle Theme or Switch to Night Mode / Switch to Day Mode dynamically.-->
        <Button Content="Switch to Day Mode" Margin="5" Padding="5" />
    </StackPanel>
</UserControl>